
@{
    ViewData["Title"] = "StoreMenu";
}

<style>

    body {
        background: linear-gradient(-45deg, #E4BBC7, #C9788F, #AF3557, #A2143C, #730E2A, #450819, #170208);
        background-size: 400% 400%;
        -webkit-animation: gradient 15s ease infinite; 
        
    }
    .col {
        
        box-sizing: border-box;
        border-style: inset;
        border-color: #A2143C;
        border-width: 3px;
        background-color: #343A40;
        padding: 15px;
        margin-top: 10px;
        margin-bottom: 15px;
        margin-left: 15px;
        margin-right: 15px;
        text-align: center;
        
    }

    .row{
        padding: 10px;
    }

    .button {
        background-color: #A2143C;
        color: snow;
        width: 100%;
        padding-top: 15px;
        border-bottom-left-radius: 20px;
        border-bottom-right-radius: 20px;
        border-style: outset;
        border-width: 4px;
        border-color: #A2143C;
        text-shadow: -2px 4px 3px black;
    }
   .button:hover{
        border: inset 4px #A2143C;
        color: snow;
        text-decoration: none;
    }
    .span1 {
        border-radius: 20px;
        background-color: #343A40;
        padding: 10px;
        border: 3px ridge #A2143C;
        text-shadow: -2px 4px 3px black;
    }

    a{
        text-decoration: none;
    }

    @@-webkit-keyframes btnBlink{
        0%{border-style:inset; border-color: #343A40;}
        15%{border-style:outset; border-color: #A2143C;}
        30%{border-style:inset; border-color: #343A40;}
        45%{border-style:outset; border-color: #A2143C;}
        60%{border-style:inset; border-color: #343A40;}
        75%{border-style:outset; border-color: #A2143C;}
        90%{border-style:inset; border-color: #343A40;}
        100%{border-style:outset; border-color: #A2143C;}
    }

    @@-webkit-keyframes gradient { 
        0% {background-position: 0% 50%;}
        50%{background-position: 100% 50%;}
        100%{background-position: 0% 50%;}
    }

</style>


<h1 class="text-center d-flex justify-content-center">
    <div>
        <span class="span1"><b>Welcome!</b></span>
    </div>
</h1>
    <p class="text-center d-flex justify-content-center">
        <span class="span1"><b>Please select one of the following options...</b></span>
    </p>


<body>
    <div class="row">
        <div class="col">
            <!--Place an order-->
            <a class="button" type="button" asp-area="" asp-controller="Stores" asp-action="GetCustomerStoreInventory" display ="none;">
                <img src="/Icon_income.png" />
                Place an order
                <img src="/Icon_income.png" />
            </a>
        </div>
        <div class="col">
            <!--Get store inventory-->
            <a class="button" type="button" asp-area="" asp-controller="Stores" asp-action="_GetStoreInventory" display="none;">
                <img src="~/Icon_loyalty.png" />
                Get Inventory
                <img src="~/Icon_loyalty.png" />
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <!--Select default store to shop from-->
            <a class="button" type="button" asp-area="" asp-controller="Stores" asp-action="_GetOrderHistorySelection">
                <img src="~/time icon.png" />
                Get Order History
                <img src="~/time icon.png" />
            </a>
        </div>
        <div class="col">
            <!--Get order history for user or store-->
            <a class="button" type="button" asp-area="" asp-controller="Stores" asp-action="_SelectDefaultStore" display ="none">
                <img src="~/Icon_trade.png" />
                Select Default Store
                <img src="~/Icon_trade.png" />
            </a>
        </div>
    </div>
    <div>
        <a asp-area="" asp-action="_Login" asp-controller="Customers">Return to login page</a>
    </div>
   


</body>